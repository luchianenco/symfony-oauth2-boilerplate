{% extends '@App/base.html.twig' %}
{% block content %}
<div class="container">
    <div class="row col-xs-12 col-md-6">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="username" name="_username" required="required" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="Password">
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
            <div class="col-xs-12 col-md-6">
                <a href="{{ path("connect_facebook_check") }}" class="btn btn-primary pull-right">Sign in using Facebook</a>
            </div>
        </div>
    </form>
    </div>

</div>
{% endblock %}
